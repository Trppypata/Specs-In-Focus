{
  "name": "specs-in-focus-backend",
  "version": "1.0.0",
  "description": "Backend for Specs In Focus app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "restart": "powershell -Command \"taskkill /F /IM node.exe; npm run dev\"",
    "kill-node": "powershell -Command \"taskkill /F /IM node.exe\"",
    "clean-start": "powershell -Command \"try { taskkill /F /IM node.exe } catch { $null }; $env:PORT=5002; npm run dev\"",
    "db:reset": "node scripts/resetDb.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
} 